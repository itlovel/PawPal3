<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFDE7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/text_menu_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sarapan"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/category_background"
            android:textColor="#000000"
            android:padding="4dp"
            android:layout_marginBottom="8dp"/>

        <CheckBox
            android:id="@+id/checkbox_menu_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/img_menu_food"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:layout_below="@id/text_menu_category"/>

        <TextView
            android:id="@+id/text_menu_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_toEndOf="@id/img_menu_food"
            android:layout_below="@id/text_menu_category"
            android:layout_marginStart="12dp"/>

        <TextView
            android:id="@+id/text_menu_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Food Description"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_below="@id/text_menu_food_name"
            android:layout_toEndOf="@id/img_menu_food"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/text_menu_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100 kcal"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_below="@id/text_menu_description"
            android:layout_toEndOf="@id/img_menu_food"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>